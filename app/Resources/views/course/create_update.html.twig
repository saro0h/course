{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    {% if app.request.attributes.get('_route') == 'course_create' %}
        Create course
    {% else %}
        Course modification
    {% endif %}
{% endblock %}

{% block content %}
    {#{{ form(courseForm) }}#}

    {{ form_start(courseForm, {'attr': {novalidate: 'novalidate'} }) }}
        {#{{ form_row(courseForm) }}#}

        {% if app.request.attributes.get('_route') == 'course_modify' %}
            Current Picture: <img src="{{ course.thumbnail }}" />
            <hr />
        {% endif %}
        {{ form_row(courseForm.thumbnailFile) }}


    {{ form_end(courseForm) }}

{% endblock %}
